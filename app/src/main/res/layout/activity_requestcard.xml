<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#f3fbfb"
        android:padding="10dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="16dp"
            android:layout_alignParentStart="true"
            android:text="Person Name :" />

        <TextView
            android:id="@+id/textView23"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView22"
            android:layout_alignParentStart="true"
            android:text="Phone Number :" />

        <TextView
            android:id="@+id/textView30"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView23"
            android:layout_alignParentStart="true"
            android:text="Date :" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView30"
            android:layout_alignParentStart="true"
            android:text="Time :" />

        <TextView
            android:id="@+id/time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date3"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="157dp"
            android:layout_toEndOf="@+id/textView33"
            android:text="8:30 AM"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/date3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneNumber1"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textView30"
            android:text="03/20"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textView22"
            android:text="Customer Handling Lecture"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/phoneNumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name1"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textView23"
            android:text="Smart Class"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="2dp"

            android:layout_marginBottom="2dp"
            android:backgroundTint="#4CAF50"
            android:shadowRadius="0"
            android:text="View>>> "
            android:textSize="11sp" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>